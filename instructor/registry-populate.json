{
    "id": "registry-populate",
    "kind": "Pod",
    "apiVersion": "v1beta1",
    "labels": {
        "name": "registry-populate"
    },
    "desiredState": {
        "manifest": {
            "id": "registry-populate",
            "version": "v1beta1",
            "restartPolicy": { "onFailure": {} },
            "containers": [
                {
                    "name": "registry-populate",
                    "image": "instructor/registry-populate",
                    "volumeMounts": [
                        {
                            "name": "docker-sock", 
                            "mountPath": "/var/run/docker.sock"
                        }
                    ]
                }
            ],
            "volumes": [
                {
                    "name": "docker-sock",
                    "source": 
                    {
                        "hostDir": {
                            "path": "/var/run/docker.sock"
                        }
                    }
                }
            ]
        }
    }
}

